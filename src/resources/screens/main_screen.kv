#:kivy 2.3.1

<CameraImage@Image>:
    color: 0, 0, 1, 1  # blauw als default

    canvas.before:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.pos
            size: self.size

<MainScreen>:
    BoxLayout:
        orientation: "vertical"

        TopbarWidget:
            id: topbar_widget
            allow_stretch: True
            keep_ratio: True

        VisionWidget:
            id: vision_widget
            allow_stretch: True
            keep_ratio: True