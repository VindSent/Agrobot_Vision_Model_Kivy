#:kivy 2.3.1

<CameraImage@Image>:
    color: 0, 0, 1, 1  # blauw als default

    canvas.before:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.pos
            size: self.size

<VisionScreen>:
    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Vision Screen"
            size_hint_y: 0.1

        CameraImage:
            id: camera_view
            allow_stretch: True
            keep_ratio: True

        BoxLayout:
            size_hint_y: 0.15

            Button:
                text: "Detect"
                on_press: app.run_yolo_on_current_frame()

            Button:
                text: "Back"
                on_press: app.root.current = "main"
