#:kivy 2.3.1

<TopbarWidget@BoxLayout>:
    orientation: "horizontal"
    size_hint_y: None
    height: 50
    padding: 5
    spacing: 5

    canvas.before:
        Color:
            rgb: 198/255, 0/255, 2/255
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Image Recognition"
        halign: "left"
        valign: "middle"
        text_size: self.size

    Widget:

    Button:
        text: "Exit"
        size_hint_x: None
        width: 100
        on_release: root.exit_app()